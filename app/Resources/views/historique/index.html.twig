{% extends 'base.html.twig' %}

{% block body %}
    <h1>Historiques list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Niveau</th>
                <th>Points</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for historique in historiques %}
            <tr>
                <td><a href="{{ path('historique_show', { 'id': historique.id }) }}">{{ historique.id }}</a></td>
                <td>{{ historique.niveau }}</td>
                <td>{{ historique.points }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('historique_show', { 'id': historique.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('historique_edit', { 'id': historique.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('historique_new') }}">Create a new historique</a>
        </li>
    </ul>
{% endblock %}
