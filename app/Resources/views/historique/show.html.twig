{% extends 'base.html.twig' %}

{% block body %}
    <h1>Historique</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ historique.id }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ historique.niveau }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ historique.points }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('historique_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('historique_edit', { 'id': historique.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
